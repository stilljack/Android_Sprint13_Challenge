<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:hint="enter a brand names"
        android:id="@+id/et_main"
        android:inputType="textNoSuggestions"
        android:autofillHints="enter a brand names"
        app:layout_constraintLeft_toLeftOf="@id/scrollView_main"
        app:layout_constraintBottom_toTopOf="@id/scrollView_main"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/btn_main"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView_main"
        />
    <ScrollView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="600sp"
        android:id="@+id/scrollView_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:layout_gravity="bottom"
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MainFragment"
        tools:listitem="@layout/bullhockey"
  />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
